$(".new_game").replaceWith("<%= j(render 'invitations/invite_new_player', :game => @game) %>")


$('.group_invitation').click(function(){
        $('.multiple_players').slideToggle('slow');
        $('.group_invitation').hide();
        $('.single_player').hide();
        $('.single_invitation').fadeIn();
    });

$('.single_invitation').click(function(){
        $('.multiple_players').slideUp('slow');
        $('.group_invitation').show();
        $('.single_player').show();
        $('.single_invitation').hide();
    });




