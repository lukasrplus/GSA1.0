


<p id="notice"><%= notice %></p>

<div class="row">

<div class="col-md-3" id="test">

<!-- <h2><%= @user.name %>, this is your profile</h2> -->

<p>
 <!--  <h3>Name:</h3> -->
  <h2><%= @user.name %></h2>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<% if @user.phone != nil %>
<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %>

</div>

<div class="col-md-9">

<% if @games.present? %>

  <h3>Your Games:</h3>

  <table class="table table-striped table-borderless">
    <thead>
      <tr>
        <th>Organizer</th>
        <th>Date</th>
        <th>Time</th>
        <th>Location</th>
        <th>Invitations</th>
      </tr>
    </thead>


    <tbody>
      <% @games.each do |game| %>
        <% if game.confirmed == true %>
        <tr  class="success">
          <td><%= User.find_by(:id => game.player1_id).name %></td>
          <td><%= game.date.strftime("%d. %B %Y") %></td>
          <td><%= game.time.strftime("%H:%M") %></td>
          <td><%= game.location %></td>
          <td><%= link_to "List of invitations", game_url(game.id) %></td>
        </tr>
        <% else %>
        <tr>
          <td><%= User.find_by(:id => game.player1_id).name %></td>
          <td><%= game.date.strftime("%d. %B %Y") %></td>
          <td><%= game.time.strftime("%H:%M") %></td>
          <td><%= game.location %></td>
          <td><%= link_to "List of invitations", game_url(game.id) %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>

  </table>

<% end %>

</div><!-- END OF SECOND COL- 6 -->

</div><!-- END OF ROW -->

